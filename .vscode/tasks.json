{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "detail": "Build workspace (default)",
      "type": "shell",
      "command": "just build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build debug",
      "detail": "Build workspace in debug mode",
      "type": "shell",
      "command": "just build_debug",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "test",
      "detail": "Run all tests and show results.",
      "type": "shell",
      "dependsOn": "build",
      "command": ".just un_tests",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "build verbose",
      "detail": "Build workspace with console_conhesion+",
      "type": "shell",
      "command": "just build_verbose",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "rebuild",
      "detail": "Rebuild workspace",
      "type": "shell",
      "command": "just rebuild",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "install dependencies",
      "detail": "Run rosdep and pip install for workspace",
      "type": "shell",
      "command": "just install_dependencies",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "lint",
      "detail": "Run python and cpp linters",
      "type": "shell",
      "command": "just lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "package",
      "type": "promptString",
      "description": "Package name"
    },
    {
      "type": "pickString",
      "id": "rosPkg",
      "description": "Ros pkg",
      "options": [
        "vscode_cpp",
        "vscode_py"
      ]
    }
  ]
}